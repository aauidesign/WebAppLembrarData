@model AppLembrarData.Entity.Compromisso

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Compromisso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoCompromisso)
        </dt>
        <dd class="col-sm-10">
            @if (Model.TipoCompromisso == 1)
            {
                <label>Aniversário</label>
            }
            else if (Model.TipoCompromisso == 2)
            {
                <label>Feriado</label>
            }
            else
            {
                <label>Outro</label>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataCompromisso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCompromisso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status == 1)
            {
                <label>Ativo</label>
            }
            else if (Model.Status == 2)
            {
                <label>Inativo</label>
            }
            else if (Model.Status == 3)
            {
                <label>Concluido</label>
            }
            else
            {
                <label>Cancelado</label>
            }
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
